{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Ensure to add this to specify the output directory
    "rootDir": "./" // Ensure to add this to specify the root directory for the sources
  },
  "include": ["./*.ts"], // Adjusted path to include .ts files directly under the directory
  "exclude": ["node_modules", "**/*.test.ts"]
}
